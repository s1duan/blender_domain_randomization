# Dockerfile autogenerated on 05/10/2021, 13:21:38 by Stephen 
# Please do not edit this file directly 

FROM nvidia/cudagl:10.1-base-ubuntu18.04

LABEL Author="Or Fleisher <or.fleisher@nytimes.com>"
LABEL Title="Blender in Docker"

# Enviorment variables
ENV DEBIAN_FRONTEND noninteractive
ENV LC_ALL C.UTF-8
ENV LANG C.UTF-8
ENV PATH "$PATH:/bin/2.92/python/bin/"
ENV BLENDER_PATH "/bin/2.92"
ENV BLENDERPIP "/bin/2.92/python/bin/pip3"
ENV BLENDERPY "/bin/2.92/python/bin/python3.7m"
ENV HW="GPU"
ENV SCRIPT_PATH "/home/scripts/blender_domain_randomization"

# Install dependencies
RUN apt-get update && apt-get install -y \ 
	wget \ 
	libopenexr-dev \ 
	bzip2 \ 
	build-essential \ 
	zlib1g-dev \ 
	libxmu-dev \ 
	libxi-dev \ 
	libxxf86vm-dev \ 
	libfontconfig1 \ 
	libxrender1 \ 
	libgl1-mesa-glx \ 
	xz-utils

# Download and install Blender
RUN wget https://mirror.clarkson.edu/blender/release/Blender2.92/blender-2.92.0-linux64.tar.xz \ 
	&& tar -xvf blender-2.92.0-linux64.tar.xz --strip-components=1 -C /bin \ 
	&& rm -rf blender-2.92.0-linux64.tar.xz \ 
	&& rm -rf blender-2.92.0-linux64 

# Download the Python source since it is not bundled with Blender
RUN wget https://www.python.org/ftp/python/3.7.0/Python-3.7.0.tgz \ 
	&& tar -xzf Python-3.7.0.tgz \ 
	&& cp -r Python-3.7.0/Include/* $BLENDER_PATH/python/include/python3.7m/ \ 
	&& rm -rf Python-3.7.0.tgz \ 
	&& rm -rf Python-3.7.0 

# Blender comes with a super outdated version of numpy (which is needed for matplotlib / opencv) so override it with a modern one
RUN rm -rf ${BLENDER_PATH}/python/lib/python3.7/site-packages/numpy 

# install git
RUN apt-get update \
	apt-get install -y git

# clone randomization script from github
RUN mkdir /home/scripts \
	cd /home/scripts \
	git clone https://github.com/s1duan/blender_domain_randomization.git

# clean up docker files cloned with the scripts 
RUN rm -rf ${SCRIPT_PATH}/2.92-gpu-ubuntu18.04

# RUN randomization scripts
RUN blender ${SCRIPT_PATH}/fluid_sim.blend --background --python ${SCRIPT_PATH}/randomization.py

# automate run blender scene and python scripts instead of using command line (using dockerfile or shell script)
# Push docker image to nautilus server

# Must first ensurepip to install Blender pip3 and then new numpy
RUN ${BLENDERPY} -m ensurepip && ${BLENDERPIP} install --upgrade pip && ${BLENDERPIP} install numpy

# Set the working directory
WORKDIR /
